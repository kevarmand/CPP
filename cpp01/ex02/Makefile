# **************************************************************************** #
#                                    PROGRAM                                   #
# **************************************************************************** #

.DEFAULT_GOAL := all

NAME		:=	cerebro

# **************************************************************************** #
#                                     UTILS                                    #
# **************************************************************************** #

CXX			:=	c++
CXXFLAGS	:=	-Wall -Wextra -Werror -std=c++98
DEP_FLAGS	:=	-MMD -MP
RM			:=	rm -rf

# **************************************************************************** #
#                                    HEADERS                                #
# **************************************************************************** #
INC_DIR		:=	.
CXXFLAGS	+=	-I$(INC_DIR)

# **************************************************************************** #
#                                    COLORS                                    #
# **************************************************************************** #

NEW			:=	\r\033[K
DEFAULT		:=	\033[0m
BLACK		:=	\033[0;30m
WHITE		:=	\033[0;37m
RED			:=	\033[0;31m
NEON_RED	:=	\033[38;5;196m
GREEN		:=	\033[0;32m
U_GREEN		:=	\033[4;32m
NEON_GREEN	:=	\033[38;5;82m
YELLOW		:=	\033[0;33m
BLUE		:=	\033[0;34m
PURPLE		:=	\033[0;35m
CYAN		:=	\033[0;36m
BOLD		:=	\033[1m
ITALIC		:=	\033[3m

# **************************************************************************** #
#                                    SOURCES                                   #
# **************************************************************************** #

# SOURCES #
SRCS =		main.cpp		


# **************************************************************************** #
#                                    OBJECTS                                   #
# **************************************************************************** #

OBJS_DIR	:=	objs
SRCS_DIR	:=	.

OBJS 		:=	$(SRCS:%.cpp=$(OBJS_DIR)/%.o)

DEPS        := $(OBJS:.o=.d)


# **************************************************************************** #
#                                     RULES                                    #
# **************************************************************************** #

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) $(OBJS) -o $(NAME)

all: $(NAME)

# **************************************************************************** #
#                                  OBJECTS RULES                               #
# **************************************************************************** #


-include $(DEPS)
$(OBJS_DIR)/%.o: $(SRCS_DIR)/%.cpp
	mkdir -p $(dir $@)
	$(CXX) $(DEP_FLAGS) $(CXXFLAGS) -c $< -o $@


# **************************************************************************** #
#                                    CLEANING                                  #
# **************************************************************************** #

CLEAR:
	@clear

clean: CLEAR
	$(RM) $(OBJS_DIR)

fclean: clean
	$(RM) $(NAME)

re: fclean all

.PHONY: all clean fclean re bonus test